                        </Viewbox>
                        <TextBlock x:Uid="/Tool/PenEditSharp" FontSize="12" VerticalAlignment="Top" Foreground="{Binding SignForeground,Mode=OneWay}" Style="{StaticResource TipTextBlock}"/>
                    </Grid>
                </Button>
