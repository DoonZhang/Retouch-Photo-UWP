<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:修图.Style">

    <!--主题颜色：亚克力-->
    <AcrylicBrush x:Key="LightAcrylicBrush" TintOpacity="0.8" TintColor="#e7e7e7" FallbackColor="#e7e7e7" /> 

    <!--透明颜色：透明白色-->
    <SolidColorBrush x:Key="LightOpacityBrush" >#BBFFFFFF</SolidColorBrush>

    <!--标题颜色：深灰-->
    <SolidColorBrush x:Key="LightTitleColor" >#e7e8e8</SolidColorBrush>
    <!--按钮颜色：白-->
    <SolidColorBrush x:Key="LightButtonColor" >#f6f6f6</SolidColorBrush>


    <!--背景颜色：浅灰-->
    <SolidColorBrush x:Key="LightBackground" >#f2f3f4</SolidColorBrush>
    <!--面板颜色：白-->
    <SolidColorBrush x:Key="LightPanelColor" >#fafafa</SolidColorBrush>


    <!--浅线颜色：灰线-->
    <SolidColorBrush x:Key="LightLineColor" >#cccccc</SolidColorBrush>
    <!--文本背景：白-->
    <SolidColorBrush x:Key="LightTextBackColor" >#FFFFFF</SolidColorBrush>


    <!--字体颜色：灰黑-->
    <SolidColorBrush x:Key="LightForeground" >#898989</SolidColorBrush>
    <!--高亮字体颜色：黑色-->
    <SolidColorBrush x:Key="LightSignForeground" >#000000</SolidColorBrush>





</ResourceDictionary>
