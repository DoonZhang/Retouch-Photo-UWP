    <Style x:Key="Thumb" TargetType="Thumb">
        <Setter Property="VerticalAlignment" Value="Top"/>
        <Setter Property="HorizontalAlignment" Value="Left"/>
        <Setter Property="Background" Value="{StaticResource BlueGradientBrush}"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="BorderBrush" Value="#55000000"/>
        <Setter Property="BorderThickness" Value="4"/>
        <Setter Property="MinWidth" Value="16"/>
        <Setter Property="MinHeight" Value="18"/>
        <Setter Property="Width" Value="30"/>
        <Setter Property="Height" Value="30"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Thumb">
                    <Grid x:Name="RootGrid" Background="#00000000">
                        <VisualStateManager.VisualStateGroups>
                            <VisualStateGroup x:Name="CommonStates">
                                <VisualState x:Name="Normal"/>
                                <VisualState x:Name="PointerOver"/>
                                <VisualState x:Name="Pressed">
                                    <Storyboard>
                                        <DoubleAnimation Duration="0:0:0.2" To="0.7" Storyboard.TargetProperty="Opacity" Storyboard.TargetName="rect"/>
                                        <DoubleAnimation Duration="0:0:0.2" To="1.2" Storyboard.TargetProperty="(UIElement.RenderTransform).(CompositeTransform.ScaleX)" Storyboard.TargetName="rect"/>
                                        <DoubleAnimation Duration="0:0:0.2" To="1.2" Storyboard.TargetProperty="(UIElement.RenderTransform).(CompositeTransform.ScaleY)" Storyboard.TargetName="rect"/>
                                    </Storyboard>
                                </VisualState>
                                <VisualState x:Name="Disabled"/>
                            </VisualStateGroup>
                        </VisualStateManager.VisualStateGroups>
                        <Grid x:Name="rect" Opacity="1" RenderTransformOrigin="0.5,0.5" >
                            <Grid.RenderTransform>
                                <CompositeTransform ScaleX="1" ScaleY="1"/>
                            </Grid.RenderTransform>
                            <Ellipse Width="{TemplateBinding MinHeight}" Height="{TemplateBinding MinHeight}" StrokeThickness="{TemplateBinding BorderThickness}" Stroke="{TemplateBinding BorderBrush}"  >
                                <Ellipse.Fill>
                                    <ImageBrush ImageSource="ms-appx:///Icon\Clutter\GrayWhite.png"  Stretch="UniformToFill"/>
                                 </Ellipse.Fill>
                            </Ellipse>
                            <Ellipse Width="{TemplateBinding MinWidth}" Height="{TemplateBinding MinWidth}" StrokeThickness="{TemplateBinding BorderThickness}"  Stroke="{TemplateBinding Foreground}"  Fill="{TemplateBinding Background}" />
                        </Grid>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

