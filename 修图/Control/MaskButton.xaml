                                    </Viewbox>
                                </Canvas>
                                <TextBlock  x:Uid="/Mask/Transform"   Grid.Column="1"  Style="{StaticResource TipTextBlock}"/>
                            </Grid>
                        </Button>

                    </StackPanel>


                </Grid>
            </Flyout>
        </Button.Flyout>
        <Rectangle Width="22" Height="22" StrokeThickness="1.2" Stroke="{Binding SignForeground,Mode=OneWay}"    StrokeDashArray="4 2"   />
     </Button>
</UserControl>
